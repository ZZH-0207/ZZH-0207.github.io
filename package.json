{
  "name": "zhangzihao-blog",
  "author": "zhangzihao",
  "homepage": "https://ZZH-0207.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZZH-0207/ZZH-0207.github.io"
  },
  "bugs": {
    "url": "https://github.com/ZZH-0207/ZZH-0207.github.io/issues"
  },
  "scripts": {
    "prep": "gem install bundler && bundle install",
    "dev": "bundle exec jekyll serve --watch --trace --livereload",
    "clean": "if exist _site rmdir /s /q _site && if exist .jekyll-cache rmdir /s /q .jekyll-cache",
    "start": "npm run dev",
    "build": "bundle exec jekyll build",
    "min": "uglifyjs ./js/index.js -o ./js/index.min.js  --comments all"
  },
  "devDependencies": {
    "uglify-js": "^2.7.5"
  }
}
